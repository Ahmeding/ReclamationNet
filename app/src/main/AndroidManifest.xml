<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.geek7aggart.gestion2reclamation">

    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ListeReclamationActivity"
            android:label="@string/title_activity_liste_reclamation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AjouterActivity"
            android:label="@string/title_activity_ajouter"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ModifierActivity"
            android:label="@string/title_activity_modifier"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ReclamtionActivity"
            android:label="@string/title_activity_reclamtion"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.InterventionActivity"
            android:label="@string/title_activity_intervention"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>